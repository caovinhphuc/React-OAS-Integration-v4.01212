# NPM Configuration for React OAS Integration v4.0
# =============================================================================

# Performance & Security
audit=true
audit-level=moderate
fund=false
save-exact=false

# Build Optimization
legacy-peer-deps=false
strict-peer-dependencies=false
engine-strict=true

# Cache & Installation
prefer-offline=true
cache-min=86400

# Progress & Logging
progress=true
loglevel=warn

# Package Lock
package-lock=true
save-prefix=^

# Script Execution
ignore-scripts=false
